<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ua.com.taxometr"
          android:versionCode="8" android:versionName="2.2">

    <uses-sdk android:minSdkVersion="1"
              android:targetSdkVersion="8"/>

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <!--GPS Provider-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <!--NETWORK_PROVIDER-->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <!--Call_function-->

    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name="ua.com.taxometr.activites.StartActivity" android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="ua.com.taxometr.activites.GoogleMapActivity" android:label="@string/app_name"/>
        <activity android:name="ua.com.taxometr.activites.SelectAddressActivity"
                  android:configChanges="orientation|keyboardHidden"/>
        <activity android:name="ua.com.taxometr.activites.CallActivity"/>

        <uses-library android:name="com.google.android.maps"
                      android:required="true"/>
    </application>


</manifest>
