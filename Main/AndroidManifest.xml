<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ua.com.taxometr"
          android:versionCode="6" android:versionName="0.5.3">

    <uses-sdk android:minSdkVersion="4"
              android:targetSdkVersion="11"/>     <!--Android 3 for attribute hardwareAccelerated works-->

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <!--GPS Provider-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <!--NETWORK_PROVIDER-->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <!--Call_function-->
    <uses-permission android:name="android.permission.CALL_PHONE"/>

    <!--To check is internet available-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application android:name="ua.com.taxometr.TaxometrApplication" android:icon="@drawable/icon" android:label="@string/app_name" android:theme="@style/CustomTheme">
        <activity android:name="ua.com.taxometr.activites.StartActivity"
                  android:screenOrientation="portrait"
                  android:configChanges="keyboardHidden|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="ua.com.taxometr.activites.GoogleMapActivity"
                  android:label="@string/app_name"/>
        <activity android:name="ua.com.taxometr.activites.SelectAddressActivity"
                  android:screenOrientation="portrait"
                  android:configChanges="keyboardHidden|orientation"/>
        <activity android:name="ua.com.taxometr.activites.CallActivity"
                  android:screenOrientation="portrait"
                  android:configChanges="keyboardHidden|orientation"/>
        <activity android:name=".activites.TaxiServicesListActivity"
                  android:screenOrientation="portrait"
                  android:configChanges="keyboardHidden|orientation"/>
        <activity android:name=".activites.LanguageListActivity"
                  android:screenOrientation="portrait"
                  android:configChanges="keyboardHidden|orientation"/>
        <activity android:name=".activites.CitiesActivity"
                  android:screenOrientation="portrait"
                  android:configChanges="keyboardHidden|orientation"/>

        <uses-library android:name="com.google.android.maps"
                      android:required="true"/>
    </application>


</manifest>
