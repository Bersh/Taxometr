<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ua.com.taxometr"
          android:versionCode="8" android:versionName="0.5.5"
          android:installLocation="preferExternal">

    <uses-sdk android:minSdkVersion="4"
              android:targetSdkVersion="11"/>     <!--Android 3 for attribute hardwareAccelerated works-->

    <!--GPS Provider-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <!--/GPS Provider-->

    <!--Access location-->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <!--/Access location-->

    <!--NETWORK_PROVIDER-->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <!--/NETWORK_PROVIDER-->

    <!--To check is internet available-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>


    <!--For call_function-->
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <!--/For call_function-->

    <!--For new maps-->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES"/>

    <permission
        android:name="ru.startandroid.mapsapi.permission.MAPS_RECEIVE"
        android:protectionLevel="signature"/>
    <uses-permission android:name="com.example.mapdemo.permission.MAPS_RECEIVE"/>

    <!-- Require OpenGL ES version 2 for new maps-->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true"/>
    <!--/For new maps-->

    <application android:name="ua.com.taxometr.TaxometrApplication" android:icon="@drawable/icon" android:label="@string/app_name" android:theme="@style/CustomTheme">
        <activity android:name="ua.com.taxometr.activites.StartActivity"
                  android:screenOrientation="portrait"
                  android:configChanges="keyboardHidden|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="ua.com.taxometr.activites.MapActivity"
                  android:label="@string/app_name"/>
        <activity android:name="ua.com.taxometr.activites.SelectAddressActivity"
                  android:screenOrientation="portrait"
                  android:configChanges="keyboardHidden|orientation"/>
        <activity android:name="ua.com.taxometr.activites.CallActivity"
                  android:screenOrientation="portrait"
                  android:configChanges="keyboardHidden|orientation"/>
        <activity android:name=".activites.TaxiServicesListActivity"
                  android:screenOrientation="portrait"
                  android:configChanges="keyboardHidden|orientation"/>
        <activity android:name=".activites.LanguageListActivity"
                  android:screenOrientation="portrait"
                  android:configChanges="keyboardHidden|orientation"/>
        <activity android:name=".activites.CitiesActivity"
                  android:screenOrientation="portrait"
                  android:configChanges="keyboardHidden|orientation"/>

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyCuOJv0R6O4OO8OAeWYevpdYssHHanFero"/>
    </application>


</manifest>
